<p id="notice"><%= notice %></p>

<h1>Social Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @social_groups.each do |social_group| %>
      <tr>
        <td><%= social_group.name %></td>
        <td><%= social_group.user_id %></td>
        <td><%= link_to 'Show', social_group %></td>
        <td><%= link_to 'Edit', edit_social_group_path(social_group) %></td>
        <td><%= link_to 'Destroy', social_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Social Group', new_social_group_path %>
